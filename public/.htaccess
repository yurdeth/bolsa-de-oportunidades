<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirige las solicitudes a las APIs antes de redirigir al index.php
    RewriteCond %{REQUEST_URI} ^/api/ [NC]
    RewriteRule ^ - [L]

    # Redirige todo lo dem√°s al archivo index.php excepto los archivos existentes
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.php [L]

</IfModule>
